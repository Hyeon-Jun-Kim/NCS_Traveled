<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/PhotoBookTitle"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="  포토북 명 :  " />

        <EditText
            android:id="@+id/EditPhotoBookTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="book"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="   여행일자 :  "
            android:id="@+id/PhotoBookTravelDate"/>
        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditPhotoBookTravelDate"
            android:hint="20210401"/>
        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="~"
            android:id="@+id/Wave"/>
        <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditPhotoBookTravelDate2"
            android:hint="20210530"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/PhotoBookTravelMember"
            android:text="      멤버 :  "/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditPhotoBookTravelMember"
            android:hint="AAA"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/PhotoBookTravelArea"
            android:text="      지역 :  "/>
<!--        <Button-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/ButtonPhotoBookTravelArea"-->
<!--            android:text="지역선택"/>-->
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditPhotoBookTravelArea"
            android:hint="경기도"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/PhotoBookTravelCity"
            android:text="      도시 :  "/>
<!--        <Button-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/ButtonPhotoBookTravelCity"-->
<!--            android:text="도시선택"/>-->
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/EditPhotoBookTravelCity"
            android:hint="수원"/>

    </LinearLayout>

</LinearLayout>