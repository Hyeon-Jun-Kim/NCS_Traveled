<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F6F4"
    android:orientation="vertical"
    tools:context=".BT_CreateActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/Htabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Books" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community" />
    </com.google.android.material.tabs.TabLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPhotoBookInfo"
            android:layout_width="100dp"
            android:layout_height="50dp"

            android:layout_marginRight="20dp"
            android:background="@drawable/buttonshape1"
            android:fontFamily="@font/binggraebold"
            android:shadowColor="#0890FB"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="포토북 정보"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPhotoBookCover"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/buttonshape1"
            android:fontFamily="@font/binggraebold"
            android:shadowColor="#0890FB"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:text="포토북 표지"
            android:textSize="20dp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:background="#6FA1E2EC">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:layout_gravity="center"
            android:id="@+id/gridview"
            />


    </LinearLayout>




    <Button
        android:id="@+id/btnPhotoBookPageCreate"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="페이지 추가"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btnPhotoBookPageDelete"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="페이지 삭제"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnPhotoBookSave"
        android:layout_width="337dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#E2EEF6"
        android:fontFamily="@font/binggraebold"
        android:shadowColor="#0890FB"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="저 장"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/ic_launcher_foreground"
        android:id="@+id/testimage"/>


</LinearLayout>