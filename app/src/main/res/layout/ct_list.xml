<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FBFFF7"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/Htabs"
        android:layout_width="411dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FBFFF7"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/HomeBtn"
            android:background="#00ff0000"
            android:layout_marginTop="2dp"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:text="Home" />

        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/BookBtn"
            android:background="#00ff0000"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_baseline_menu_book_24"
            android:text="Book" />

        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:id="@+id/CommunityBtn"
            android:background="#00ff0000"
            android:text="Community"
            android:drawableTop="@drawable/ic_baseline_emoji_people_24"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ct_recycler"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:divider="#ffffff"
        android:dividerHeight="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ct_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Htabs"
        app:layout_constraintVertical_bias="0.0" />
<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="85dp"-->
<!--        android:background="@drawable/jeju2"-->
<!--        android:scaleType="fitXY"-->
<!--        android:layout_marginTop="10dp"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/ct_listview"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintHorizontal_bias="0.476"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/Htabs"-->
<!--        app:layout_constraintVertical_bias="0.0"/>-->


    <ListView
        android:id="@+id/ct_listview"
        android:layout_width="395dp"
        android:layout_height="464dp"
        android:layout_marginBottom="60dp"
        android:background="#FBFFF7"
        android:divider="#ffffff"
        android:dividerHeight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Htabs"
        app:layout_constraintVertical_bias="0.878" />

    <Button
        android:id="@+id/ct_writeBtn"
        android:layout_width="290dp"
        android:layout_height="35dp"
        android:text="글 쓰기"
        android:background="#FBFFF7"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ct_listview" />



</androidx.constraintlayout.widget.ConstraintLayout>